  <div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main">

      <tal:item repeat="item python:context.listFolderContents(contentFilter={'portal_type':'SubmissionsFolder'})">
	<div id="jq-rt-articles">
 	  <tal:article repeat="article python:item.listFolderContents(contentFilter={'portal_type':'Article'})">
	    <h3><a href="#" tal:content="python: article.title + ' by '.join(article.Creators())"/></h3>
	    <div>
	      <div class="rt-article-meta">
		Article State: <span class="#" tal:attributes="class python:'state-'+article.get_review_state()" tal:content="article/get_review_state" /> | Pages: <span id="pages" tal:content="article/pages" /> | <a href="#" tal:attributes="href article/absolute_url">Full article</a> | <a href="#" tal:attributes="href string:${article/absolute_url}/edit">Edit</a> | Abstract and images:
	      </div>
	      <div class="rt-description" tal:content="article/description" />
	      <div class="rt-normal-image" tal:condition="article/image">
      		<a title="#" href="#" tal:attributes="href string:${article/absolute_url}/image">
      		  <img tal:replace="structure article/@@images/image/normal" alt=""/></a>
      	      </div>
      	      <div class="thumbnail" tal:condition="article/image2">
      		<a href="#" tal:attributes="href string:${article/absolute_url}/image2">
      		  <img tal:replace="structure article/@@images/image2/normal" alt=""/></a>
      	      </div>
      	      <div class="thumbnail" tal:condition="article/image3">
      		<a href="#" tal:attributes="href string:${article/absolute_url}/image3">
      		  <img tal:replace="structure article/@@images/image3/normal" alt=""/></a>
      	      </div>
	    </div>
          </tal:article>
	</div>
